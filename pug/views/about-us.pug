    section#section1
        .owl-carousel.owl-theme.about-us
            div
                img(src='assets/images/about-us/section1/img.png').img-width-100.d-lg-block.d-none
                img(src='assets/images/about-us/section1/img_m.png').img-width-100.d-lg-none.d-block
                div.mt-lg-n22.mt-md-n10.pb-lg-15.mt-n16.pb-13.col-lg-8.col-md-8.mx-auto.mt-xxl-n28
